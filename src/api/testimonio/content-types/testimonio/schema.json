{
  "kind": "collectionType",
  "collectionName": "testimonios",
  "info": {
    "singularName": "testimonio",
    "pluralName": "testimonios",
    "displayName": "Testimonio",
    "description": "Testimonios de clientes"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre_cliente": {
      "type": "string",
      "required": true
    },
    "comentario": {
      "type": "text",
      "required": true
    },
    "foto": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "calificacion": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5
    },
    "sitio_web": {
      "type": "enumeration",
      "enum": ["interior-landing", "otro-cliente-1", "otro-cliente-2"],
      "default": "interior-landing",
      "required": false
    }
  }
}
