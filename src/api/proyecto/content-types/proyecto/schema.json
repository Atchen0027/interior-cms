{
  "kind": "collectionType",
  "collectionName": "proyectos",
  "info": {
    "singularName": "proyecto",
    "pluralName": "proyectos",
    "displayName": "Proyecto",
    "description": "Proyectos de diseño de interiores"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "string",
      "required": true
    },
    "descripcion": {
      "type": "text",
      "required": true
    },
    "categoria": {
      "type": "string",
      "required": true
    },
    "imagen_principal": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "galeria": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "ubicacion": {
      "type": "string",
      "required": false
    },
    "año": {
      "type": "integer",
      "required": false
    },
    "destacado": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "cliente": {
      "type": "string",
      "required": false,
      "private": false
    },
    "sitio_web": {
      "type": "enumeration",
      "enum": ["interior-landing", "otro-cliente-1", "otro-cliente-2"],
      "default": "interior-landing",
      "required": false
    }
  }
}
